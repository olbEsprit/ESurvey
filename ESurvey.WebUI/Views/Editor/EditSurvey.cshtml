
@{
    ViewBag.Title = "EditSurvey";
}

<h2>EditSurvey</h2>
<div ng-app="editorApp">
    <div ng-controller="mainController" ng-init="init(@ViewBag.Id)">


        <div ng-controller="editorController" ng-init="init()">
            <div class="row">
                <survey-details-editor></survey-details-editor>
            </div>
        </div>
        <hr />
        <div class="row">
            <div ng-controller="questionListController" ng-init="init()">
                <div class="col-md-6">
                    <question-list-dir></question-list-dir>
                </div>
            </div>
            <div class="col-md-2">
                <div ng-controller="questionCreatorController" ng-init="init()">
                    <create-question-directive></create-question-directive>
                </div>
            </div>

        </div>

        <div  class="col-md-10"ng-view></div>

    </div>
</div>

