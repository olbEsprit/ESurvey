<div class="panel panel-default container-fluid">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-2"><h3 class="panel-title"><b>Q:{{EditedDetails.Number}} {{EditedDetails.Title}} {{TypeName}}</b></h3></div>
            <div class="col-xs-4"><a href="#" class="btn btn-success pull-right">Close</a></div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <form novalidate class="simple-form col-lg-8">
                Name: <input type="text" ng-model="EditedDetails.Title" /><br />
                <input type="checkbox" ng-model="EditedDetails.IsHidden">Hidden<br />
                <input type="checkbox" ng-model="EditedDetails.RequriedAnswer">Require Answer<br />
                <button ng-click="SendDetails()">Save</button>
            </form>
        </div>
    </div>
</div>
